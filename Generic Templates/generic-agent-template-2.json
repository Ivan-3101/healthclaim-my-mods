{
  "$schema": "https://unpkg.com/@camunda/element-templates-json-schema/resources/schema.json",
  "name": "Generic Agent Task v2",
  "id": "com.dronapay.generic.agent.v2",
  "appliesTo": [
    "bpmn:ServiceTask"
  ],
  "properties": [
    {
      "type": "Hidden",
      "value": "com.DronaPay.generic.delegates.GenericAgentDelegate",
      "binding": {
        "type": "property",
        "name": "camunda:class"
      }
    },
    {
      "label": "Agent ID",
      "description": "Unique ID for this agent (e.g. forgeryagent)",
      "type": "String",
      "binding": {
        "type": "camunda:field",
        "name": "agentId"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Base URL",
      "description": "Select the API base URL",
      "type": "Dropdown",
      "choices": [
        {
          "name": "DIA Agent API",
          "value": "dia"
        }
      ],
      "value": "dia",
      "binding": {
        "type": "camunda:field",
        "name": "baseUrl"
      }
    },
    {
      "label": "Route",
      "description": "Enter the API route (e.g. agent, policy)",
      "type": "String",
      "value": "agent",
      "binding": {
        "type": "camunda:field",
        "name": "route"
      }
    },
    {
      "label": "Authentication",
      "description": "Select authentication method",
      "type": "Dropdown",
      "choices": [
        {
          "name": "Basic Auth",
          "value": "basicAuth"
        }
      ],
      "value": "basicAuth",
      "binding": {
        "type": "camunda:field",
        "name": "authType"
      }
    },
    {
      "label": "HTTP Method",
      "type": "Dropdown",
      "choices": [
        {
          "name": "POST",
          "value": "POST"
        },
        {
          "name": "GET",
          "value": "GET"
        }
      ],
      "value": "POST",
      "binding": {
        "type": "camunda:field",
        "name": "method"
      }
    },
    {
      "label": "Input Parameters (JSON)",
      "description": "JSON Array of inputs. Types: 'value', 'minioFile', 'minioJson'.",
      "type": "Text",
      "value": "[]",
      "binding": {
        "type": "camunda:field",
        "name": "inputParams"
      }
    },
    {
      "label": "Output Mapping (JSON)",
      "description": "Map JSON response paths to variables. Ex: {\"isForged\": \"$.answer\"}",
      "type": "Text",
      "value": "{}",
      "binding": {
        "type": "camunda:field",
        "name": "outputMapping"
      }
    }
  ]
}